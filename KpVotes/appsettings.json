{
  "KpVotesJobOptions": {
    "Cron": "0 0 0/1 * * ?",
    "StartNow": "false",
    "KpUri": "https://www.kinopoisk.ru",
    "VotesUri": "user/1719755/votes",
    "VotesPath": "votes.json"
  },
  "NLog": {
    "autoReload": true,
    "throwConfigExceptions": true,
    "variables": {
      "logDir": "logs",
      "simpleLayout": "${longdate}|${level}|${message} | ${all-event-properties} ${exception:format=tostring}"
    },
    "targets": {
      "async": true,
      "logFileByLogger": {
        "type": "File",
        "fileName": "${logDir}/${logger}.${shortdate}.txt",
        "layout": "${simpleLayout}"
      },
      "logAppAll": {
        "type": "File",
        "fileName": "${logDir}/app.all.${shortdate}.txt",
        "layout": "${simpleLayout}"
      },
      "logAppError": {
        "type": "File",
        "fileName": "${logDir}/app.error.${shortdate}.txt",
        "layout": "${simpleLayout}"
      },
      "logConsole": {
        "type": "Console",
        "layout": "${simpleLayout}"
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Error",
        "writeTo": "logAppError,logAppAll,logConsole,logFileByLogger",
        "final": true
      },
      {
        "logger": "KpVotes.*",
        "minLevel": "Info",
        "writeTo": "logAppAll,logConsole"
      },
      {
        "logger": "*",
        "minLevel": "Warn",
        "writeTo": "logFileByLogger",
        "finalMinLevel": "Warn"
      }
    ]
  }
}